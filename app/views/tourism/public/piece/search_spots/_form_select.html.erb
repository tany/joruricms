  <p>ジャンル</p>
  <%= f.select_with_tree :s_genre_id, @genres, :conditions => {:state => 'public'}, :label => :title,
    :include_blank => "　", :name => "s_genre_id" %>
</div>
<% end %>
    
<% if @areas.size > 0 %>
<div class="areaForm">
  <p>地域</p>
  <%= f.select_with_tree :s_area_id, @areas, :conditions => {:state => 'public'}, :label => :title,
    :include_blank => "　", :name => "s_area_id" %>
</div>
<% end %>
