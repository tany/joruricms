<% if @genres.size > 0 %>
<div class="genreForm">
  <p>ジャンル</p>
  
  <% @genres.each do |genre| %>
  <% chk = (@s_genre_id == genre.id.to_s) ? 'checked="checked"' : '' %>
  <div class="d0 genre<%= genre.name.camelize %>">
    <label><input type="radio" name="s_genre_id" value="<%= genre.id %>" <%= chk %> /><%= genre.title %></label>
  </div>
  
  <% if (children = genre.public_children).size > 0 %>
  <div class="children">
    <% children.each do |c| %>
    <% chk = (@s_genre_id == c.id.to_s) ? 'checked="checked"' : '' %>
    <div class="d1 genre<%= c.name.camelize %>">
      <label><input type="radio" name="s_genre_id" value="<%= c.id %>" <%= chk %> /><%= c.title %></label>
    </div>
    <% end %>
  </div>
  <% end %>
  <% end %>
</div>
<% end %>
    
<% if @areas.size > 0 %>
<div class="areaForm">
  <p>地域</p>
  
  <% @areas.each do |area| %>
  <% chk = (@s_area_id == area.id.to_s) ? 'checked="checked"' : '' %>
  <div class="d0 area<%= area.name.camelize %>">
    <label><input type="radio" name="s_area_id" value="<%= area.id %>" <%= chk %> /><%= area.title %></label>
  </div>
  <% end %>
  
</div>
<% end %>
