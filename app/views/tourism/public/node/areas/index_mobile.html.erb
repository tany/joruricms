<div class="contentTourismArea">

<% if @items.size > 0 %>
<div class="areas">
  <div class="h2">■地域一覧</div>
  <% @items.each do |item| %>
  <div>・<%= link_to h(item.title), "#{@base_uri}#{item.name}/" %></div>
  <% end %>
</div>
<% end %>

<% if @spots.size > 0 %>
<div class="spots">
  <div class="h2">観光地一覧</div>
  <% @spots.each do |item| %>
  <%= render :partial => "tourism/public/node/spots/item", :locals => {:item => item} %>
  <% end %>
  <%= paginate @spots %>
</div>
<% end %>

</div>
