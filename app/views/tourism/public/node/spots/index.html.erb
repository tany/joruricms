<div class="contentTourism contentTourismSpots">

<% if @items.size > 0 %>
<div class="spots">
  <ul class="spots">
    <% @items.each do |item| %>
    <li><%= render :partial => "tourism/public/node/spots/item", :locals => {:item => item} %></li>
    <% end %>
  </ul>
  <%= paginate @items %>
</div>
<% end %>

</div>
