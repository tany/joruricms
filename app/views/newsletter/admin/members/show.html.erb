<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= @item.locale(:state) %></th>
    <td><%= safe{@item.status.name} %></td>
  </tr><tr>
    <th><%= @item.locale(:email) %></th>
    <td><%= @item.email %></td>
  </tr><tr>
    <th><%= @item.locale(:letter_type) %></th>
    <td><%= @item.letter_type_name %></td>
  </tr>
</table>

<p class="form">作成日時</p>

<table class="show">
  <tr>
    <th>作成日時</th>
    <td colspan="3"><%= safe{@item.created_at.strftime("%Y-%m-%d %H:%M:%S")} %></td>
  </tr><tr>
    <th>編集日時</th>
    <td colspan="3"><%= safe{@item.updated_at.strftime("%Y-%m-%d %H:%M:%S")} %></td>
  </tr>
</table>