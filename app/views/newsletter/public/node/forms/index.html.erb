<div class="contentNewsletter contentNewsletterForms">

<%= form_for :item, :url => "#{@node_uri}" do |f| %>

  <% if !@content.summary.blank? %>
  <div class="summary"><%== @content.summary %></div>
  <% end %>
  
  <h2 class="cornerTitle"><%= @content.name %>の登録はこちら</h2>
  
  <%= error_messages_for "item" %>
  
  <% if !@content.addition_body.blank? %>
  <div class="body"><%== @content.addition_body %></div>
  <% end %>
  
  <div class="column columnEmail">
    <div class="name"><%= @item.locale(:email) %> <span class="required">※</span></div>
    <div class="field"><%= f.text_field :email, :class => 'email' %></div>
  </div>
  
  <div class="column columnLetterType">
    <div class="name"><%= @item.locale(:letter_type) %> <span class="required">※</span></div>
    <div class="field"><%= f.radio_buttons :letter_type, @item.letter_types %></div>
  </div>
  
  <% if @use_captcha %>
  <div class="column columnLetterCaptcha">
    <div class="name">画像認証</div>
    <div class="field captcha"><%= show_simple_captcha :object => "item", :image_style => "simply_green", :distortion => "middle",
      :label => "画像の文字を入力してください" %></div>
  </div>
  <% end %>
  
  <div class="submitters">
    <input type="submit" value="確認メールを送信する" />
  </div>

<% end %>

<div class="change">
  <%= link_to 'メールマガジンの解除はこちら', "#{@node_uri}change.html" %>
</div>

</div>
